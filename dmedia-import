from __future__ import print_function

import sys
import optparse
from os import path

import dmedia
from dmedia.client import Client
from dmedia.firstrun import FirstRunGUI, ImportDialog


parser = optparse.OptionParser(
    version=dmedia.__version__,
    usage='%prog DIRECTORY',
)
parser.add_option('--unset',
    action='store_true',
    default=False,
    help='unset gconf value to repeat first-run behavior',
)
parser.add_option('--quick',
    dest='extract',
    action='store_false',
    default=True,
    help='import without metadata extraction or thumbnail generation',
)

(options, args) = parser.parse_args()

if len(args) == 0:
    d = ImportDialog()
    base = d.run()
    if base is None:
        print('import_canceled')
        sys.exit()
else:
    base = path.abspath(args[0])
    if not path.isdir(base):
        parser.print_usage()
        print('ERROR: not a directory: %r' % base)
        sys.exit(1)
    if not FirstRunGUI.run_if_first_run(base, options.unset):
        print('import_canceled')
        sys.exit()

client = Client()
action = client.start_import(base, options.extract)
print(action)
if action != 'started':
    sys.exit(2)
