from __future__ import print_function

import sys
import optparse
from os import path

import dmedialib
from dmedialib.client import Client


parser = optparse.OptionParser(
    version=dmedialib.__version__,
    usage='%prog DIRECTORY',
)
parser.add_option('--reset',
    action='store_true',
    default=False,
    help='reset gconf setting to repeat first-run behavior',
)
parser.add_option('--dialog',
    action='store_true',
    default=False,
    help='force display of dialog regardless of gconf setting',
)
parser.add_option('--quick',
    dest='extract',
    action='store_false',
    default=True,
    help='import without metadata extraction or thumbnail generation',
)


def usage(msg, code=1):
    parser.print_usage()
    print('ERROR: ' + msg)
    sys.exit(code)


if __name__ == '__main__':
    (options, args) = parser.parse_args()
    if len(args) != 1:
        usage('requires single argument DIRECTORY')
    base = path.abspath(args[0])
    if not path.isdir(base):
        usage('not a directory: %r' % base)
    client = Client()
    action = client.start_import(base, options.extract)
    print(action)
    if action != 'started':
        sys.exit(2)


# FIXME: For now, we're always importing without showing the first-run dialog

