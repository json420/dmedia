import os
import sys
import dmedialib.client
from dmedia_import.firstrun import FirstRunGUI


if __name__ == '__main__':
    if len(sys.argv) > 1: #This will happen if run from the nautilus handler
        args = sys.argv[1:]

        FirstRunGUI.run_if_first_run(args, lambda app: exit())

        os.system("dmedia-notify &")
        os.system("indicator-dmedia &")

        dmedia_client = dmedialib.client.Client()
        dmedia_client.version()
        for base in args:
            base = os.path.abspath(base)
            #start only if import hasn't already started
            if not base in dmedia_client.list_imports():
                print("dmedia-import: starting import of %s" % base)
                print dmedia_client.start_import(base)
            else:
                print("dmedia-import: not starting import of %s" % base)


    else:
        pass #put a full UI here



