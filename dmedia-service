import sys
import optparse

import dbus
from dbus.mainloop.glib import DBusGMainLoop
import gobject

DBusGMainLoop(set_as_default=True)
gobject.threads_init()

import dmedia
from dmedia.constants import BUS, DBNAME


parser = optparse.OptionParser(version=dmedia.__version__)
parser.add_option('--bus',
    default=BUS,
    help='D-Bus bus name; default is %r' % BUS,
)
parser.add_option('--dbname',
    metavar='DIR',
    default=DBNAME,
    help='CouchDB database; default is %r' % DBNAME,
)
parser.add_option('--no-gui',
    action='store_true',
    default=False,
    help='run without NotifyOSD and Application Indicators',
)


def exit(msg, code=1):
    parser.print_help()
    print('ERROR: ' + msg)
    sys.exit(code)


if __name__ == '__main__':
    (options, args) = parser.parse_args()

    env = dmedia.get_env(options.dbname)
    env['bus'] = options.bus
    env['no_gui'] = options.no_gui
    print env

    from dmedia.util import configure_logging
    configure_logging('service')

    from dmedia import service
    mainloop = gobject.MainLoop()
    obj = service.DMedia(mainloop.quit,
        options.bus, options.dbname, options.no_gui
    )
    mainloop.run()
