"""
Core dmedia DBus service at "org.freedesktop.DMedia".
"""

import argparse
import time

import dmedia
from dmedia.constants import BUS, DBNAME


parser = argparse.ArgumentParser(
    description='DBus service @{}'.format(BUS),
)
parser.add_argument('--version', action='version', version=dmedia.__version__)
parser.add_argument('--no-dc',
    action='store_true',
    default=False,
    help='Use system-wide CouchDB instead of desktopcouch',
)
parser.add_argument('--bus',
    default=BUS,
    help='DBus bus name; default is %(default)r',
)
parser.add_argument('--dbname',
    metavar='DB',
    default=DBNAME,
    help='CouchDB database; default is %(default)r',
)
parser.add_argument('--env',
    help='dmedia environment as JSON serialized string',
    metavar='JSON',
)

args = parser.parse_args()
dmedia.configure_logging('service')

from dbus.mainloop.glib import DBusGMainLoop
DBusGMainLoop(set_as_default=True)

from gi.repository import GObject
GObject.threads_init()

from dmedia.service import DMedia

mainloop = GObject.MainLoop()
couchargs = (args.dbname, args.no_dc, args.env)
obj = DMedia(couchargs, args.bus, mainloop.quit, start=time.time())
mainloop.run()
