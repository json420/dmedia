import sys
from subprocess import check_call
import optparse
import dmedia

parser = optparse.OptionParser(
    version=dmedia.__version__,
)
parser.add_option('--browser',
    action='store_true',
    default=False,
    help='open dmedia HTML5 UI in default browser',
)
(options, args) = parser.parse_args()

from dmedia.webui.app import App
from dmedia.abstractcouch import get_env
from dmedia.metastore import MetaStore

app = App()
env = get_env()
store = MetaStore(env)
store.update(app.get_doc())


if options.browser:
    uri = store.get_auth_uri() + '/dmedia/app/browser'
    check_call(['xdg-open', uri])
    sys.exit()

uri = store.get_uri() + '/dmedia/app/browser'


from dmedia.gtkui.widgets import CouchView
from gi.repository import Gtk, GObject


GObject.threads_init()


window = Gtk.Window()
window.set_title('test')
window.set_default_size(960, 540)
window.connect('destroy', Gtk.main_quit)

scroll = Gtk.ScrolledWindow()
scroll.set_policy(Gtk.PolicyType.AUTOMATIC, Gtk.PolicyType.AUTOMATIC)
window.add(scroll)

view = CouchView(env['url'], env['oauth'])
scroll.add(view)

window.show_all()
view.load_uri(uri)


Gtk.main()
